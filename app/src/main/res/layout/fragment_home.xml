<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.baweistore.Fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ig_bt_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/common_nav_btn_menu_n_xxhdpi" />

        <EditText
            android:id="@+id/searchtext"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:hint="  请输入您要搜索的商品"
            android:textColor="#787878"
            android:background="@drawable/shape1"></EditText>

        <TextView
            android:id="@+id/tv_search_sou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="搜索"
            android:textColor="#979696"
            android:textSize="18sp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
        android:layout_width="540dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        >
        <android.support.v4.view.ViewPager
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:clipChildren="false"
            android:layout_marginLeft="90dp"
            android:id="@+id/viewpager_home"></android.support.v4.view.ViewPager>
    </LinearLayout>


    <ScrollView
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@mipmap/bitmap"
        android:gravity="center"
        android:text="热销商品"
        android:textColor="#e4ab10"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:src="@mipmap/common_btn_more_n_xxhdpi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@mipmap/bitmap_mo"
            android:gravity="center"
            android:text="魔丽时尚"
            android:textColor="#9610e4"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/common_btn_more_n_xxhdpi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_mo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@mipmap/bitmap_pin"
            android:gravity="center"
            android:text="品质生活"
            android:textColor="#e7082d"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/common_btn_more_n_xxhdpi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抱歉，没有更多商品啦~"
            android:textColor="#979696"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
    </ScrollView>

</LinearLayout>



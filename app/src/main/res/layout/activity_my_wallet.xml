<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.baweistore.MyActivity.MyInformationActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/wallet"
        fresco:roundedCornerRadius="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="14dp"
        android:text="余额"
        android:textSize="18sp"
        android:textColor="#343434"
        android:id="@+id/yue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yue"
        android:layout_alignStart="@+id/yue"
        android:layout_below="@+id/yue"
        android:layout_marginTop="13dp"
        android:text="1000000"
        android:textColor="#343434"
        android:textSize="64sp"
        android:id="@+id/my_wallet_money"/>

</RelativeLayout>

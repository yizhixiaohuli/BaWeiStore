<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    tools:context="com.example.baweistore.Fragment.HomeFragment">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的圈子"
        android:layout_marginLeft="180dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="180dp"
        android:id="@+id/img_my_circle_delete"
        android:src="@mipmap/common_btn_delete_n_xxhdpi"

        />
</LinearLayout>
<com.jcodecraeer.xrecyclerview.XRecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_circle_xrv"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login"
    tools:context=".Activity.loginActivity">


        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="160dp"
            android:drawableLeft="@mipmap/login_icon_phone_n_xxhdpi"
            android:ems="12"
            android:hint="     手机号"
            android:textSize="18sp"
            android:textColorHint="#fff"
            android:id="@+id/ed_phone"
            />

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_phone"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/view_phone"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/login_icon_lock_n_xxhdpi"
            android:ems="12"
            android:hint="  登录密码"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:id="@+id/ed_pass"
            android:layout_below="@+id/view_phone"
            android:drawableRight="@mipmap/login_icon_eye_n_xxhdpi"
            />

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_pass"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/view_pass"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:layout_below="@+id/view_pass"
            android:layout_marginLeft="70dp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:buttonTint="#fff"
            android:id="@+id/checkBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_marginLeft="400dp"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="14sp"
            android:id="@+id/tv_regiser"/>
        <Button
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:textColor="#ff5f71"
            android:text="登录"
            android:background="@drawable/shape"
            android:layout_marginBottom="120dp"
            android:layout_below="@+id/checkBox"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="70dp"
            android:textSize="18sp"
            android:id="@+id/bt_login"

            />

</RelativeLayout>

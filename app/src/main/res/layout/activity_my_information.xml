<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.baweistore.MyActivity.MyInformationActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="我的资料"
    android:textSize="16sp"
    android:layout_gravity="center_horizontal"
    android:textColor="#666666"
    android:layout_marginTop="40dp"/>
    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="138dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/shape_my_information"
        >
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的头像"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#666666"
        android:textSize="14sp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        fresco:roundAsCircle="true"

        android:id="@+id/fresco_my_information_tou"
        />
</LinearLayout>
        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ededed"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的昵称"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#666666"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还是狂吃"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_my_information_name"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ededed"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的密码"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#666666"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_my_information_pass"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ededed"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
